@using TheHockeyGame.Models
@model ViewModel

@if(Model.message != null)
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.message
    </div>
}
<div class="col-md-8 col-md-offset-2 well">
    <h2>This is the weekly game sign up</h2>
    <div class="row">
        <a href="/manager/AlwaysIn" class="btn btn-info">Sign up for the weekly notification</a>
        <a href="/home/signin" class="btn btn-success">Sign up for the next upcoming game</a>
    </div>
</div>